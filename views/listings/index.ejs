<% layout("layouts/boilerplate") %>

<style>
  .filters-wrapper {
    display: flex;
    align-items: center;
    overflow-x: auto;
    white-space: nowrap;
    gap: 0.7rem;
    padding: 1rem;
    scroll-behavior: smooth;
  }

  .filters-wrapper::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
    min-width: 80px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-toggle {
    flex: 0 0 auto;
    border: 2px solid gray;
    border-radius: 1rem;
    height: 3.25rem;
    display: flex;
    align-items: center;
    white-space: nowrap;


    padding: 1rem;
 
  }

  .tax-toggle:hover {
    background-color: #f0f0f0;
  }

  .tax-info {
    display: none;
  }
</style>

<body>
  <!-- Filters + Tax Toggle in One Scrollable Row -->
  <div class="filters-wrapper">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i>
      </div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i>
      </div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i>
      </div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i>
      </div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-chess-rook"></i>
    </div>
    <p>Castles</p>
  </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i>
      </div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i>
      </div><p>Camping</p></div>
    <div class="filter"><div>
      <i class="fa-solid fa-wheat-awn"></i>
    </div>
    <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-snowboarding"></i>
      </div>
      <p>Arctic</p></div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i>
      </div>
      <p>Domes</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-ship"></i>
      </div>
      <p>Houseboats</p>
    </div>

    <!-- âœ… Tax toggle is now part of scrollable filters -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display totals after taxes</label>
      </div>
    </div>
  </div>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mt-3">
    <% for (listing of listings) { %>
      <a href="/listings/<%=listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" style="height: 20rem;" class="card-img-top" alt="<%= listing.title %> image">
          <div class="card-img-overlay">
            <h5 class="card-title text-white"><%= listing.title %></h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= listing.title %><br>
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night
              <i class="tax-info">&nbsp;&nbsp; +18% Gst</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>

<!-- for switch -->
 <script>
  let texToggle = document.getElementById('switchCheckDefault');
  let taxInfo = document.getElementsByClassName("tax-info")
  texToggle.addEventListener('change', function(){
    for(info of taxInfo){
      if(texToggle.checked){
      info.style.display = "inline"
    }else{
      info.style.display = "none"
    }
  }

  })
 </script>
